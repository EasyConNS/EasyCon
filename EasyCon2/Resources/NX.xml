<?xml version="1.0"?>
<SyntaxDefinition name = "NX" extensions = ".nmcx">
  <Properties>
    <Property name="LineComment" value="#"/>
  </Properties>
  <Digits name = "Digits" bold = "false" italic = "false" color = "DarkBlue"/>
  <RuleSets>
    <RuleSet ignorecase = "true">
      <Span name = "LineComment" bold="false" italic="false" color="Green" stopateol = "true">
        <Begin>#</Begin>
      </Span>
      <KeyWords name = "Funcs" bold="true" italic="false" color="LightBlue">
        <Key word = "RAND" />
        <Key word = "TIME" />
        <Key word = "PRINT" />
        <Key word = "ALERT" />
        <Key word = "WAIT" />
      </KeyWords>
      <KeyWords name = "Conditions" bold="true" italic="false" color="Blue">
        <Key word = "FOR" />
        <Key word = "TO" />
        <Key word = "NEXT" />
        <Key word = "BREAK" />
        <Key word = "CONTINUE" />
        <Key word = "IF" />
        <Key word = "ELSE" />
        <Key word = "ENDIF" />
        <Key word = "FUNC" />
        <Key word = "CALL" />
        <Key word = "RET" />
        <Key word = "@" />
        <Key word = "_" />
      </KeyWords>
      <KeyWords name = "Buttons" bold="true" italic="false" color="Red">
        <Key word = "A" />
        <Key word = "B" />
        <Key word = "X" />
        <Key word = "Y" />
        <Key word = "L" />
        <Key word = "R" />
        <Key word = "ZL" />
        <Key word = "ZR" />
        <Key word = "PLUS" />
        <Key word = "MINUS" />
        <Key word = "LCLICK" />
        <Key word = "RCLICK" />
        <Key word = "HOME" />
        <Key word = "CAPTURE" />
        <Key word = "UP" />
        <Key word = "DOWN" />
        <Key word = "RIGHT" />
        <Key word = "LEFT" />
        <Key word = "LS" />
        <Key word = "LSS" />
        <Key word = "RS" />
        <Key word = "RSS" />
      </KeyWords>
    </RuleSet>
  </RuleSets>
</SyntaxDefinition>